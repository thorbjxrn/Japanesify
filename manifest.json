{
  "manifest_version": 2,
  "name": "Emoji Substitution",
  "description": "Replaces words with emojis.",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/emoji-substitution",
  "version": "1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Japanesify",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content_scripts/characterMap.js", "./content_scripts/substitute.js"]
    }
  ]
}
